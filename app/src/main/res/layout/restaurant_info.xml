<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient">

    <View
        android:id="@+id/topDivider4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/leftDivider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/rightDivider"
        android:layout_width="1dp"
        android:layout_height="750dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottomDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="310dp"
        android:layout_height="153dp"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topDivider4"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/name"
            android:layout_width="180dp"
            android:layout_height="37dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/raleway"
            android:gravity="left|center_vertical"
            android:text="Restaurant Name"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="180dp"
            android:layout_height="37dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/raleway"
            android:gravity="left|center_vertical"
            android:text="Restaurant Name"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="180dp"
            android:layout_height="37dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/raleway"
            android:gravity="left|center_vertical"
            android:text="Restaurant Name"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/average_wait"
            android:layout_width="180dp"
            android:layout_height="37dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/raleway"
            android:gravity="left|center_vertical"
            android:text="Restaurant Name"
            android:textColor="#000000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/restaurant_image"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="310dp"
        android:layout_height="115dp"
        android:layout_marginTop="175dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toStartOf="@+id/rightDivider"
        app:layout_constraintStart_toStartOf="@+id/leftDivider"
        app:layout_constraintTop_toBottomOf="@+id/topDivider4">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/raleway"
            android:text="Estimated Wait Time:"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/current_wait"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/raleway"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tables"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/raleway"
            android:text="TextView"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/orders"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="85dp"
            android:fontFamily="@font/raleway"
            android:text="TextView"
            android:textColor="#000000" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="310dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toStartOf="@+id/rightDivider"
        app:layout_constraintStart_toEndOf="@+id/leftDivider"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <TextView
            android:id="@+id/number"
            android:layout_width="275dp"
            android:layout_height="63dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/raleway"
            android:text="TextView"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/raleway"
            android:text="Phone Number:"
            android:textColor="#000000"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="310dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toStartOf="@+id/rightDivider"
        app:layout_constraintStart_toEndOf="@+id/leftDivider"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/raleway"
            android:text="Address:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="276dp"
            android:layout_height="61dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/raleway"
            android:text="TextView"
            android:textColor="#000000" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="310dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bottomDivider"
        app:layout_constraintTop_toBottomOf="@+id/cardView4">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/raleway"
            android:text="Website:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/website"
            android:layout_width="276dp"
            android:layout_height="61dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/raleway"
            android:text="TextView"
            android:textColor="#000000" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>